<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal" >

    <TextView
        android:id="@+id/circle_theatres"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:layout_marginTop="19dp"
        android:text="@string/theatres"
        android:textColor="#ffff"
        android:textSize="17sp"
        android:layout_below="@+id/circle_distributers"
        android:layout_toLeftOf="@+id/circle_distributers"
        android:layout_toStartOf="@+id/circle_distributers" />

    <TextView
        android:id="@+id/circle_movies"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:text="@string/movies"
        android:textColor="#ffff"
        android:textSize="22sp"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="55dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/circle_distributers"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:text="@string/shows"
        android:textColor="#ffff"
        android:textSize="14sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/circle_movies"
        android:layout_toEndOf="@+id/circle_movies" />

</RelativeLayout>