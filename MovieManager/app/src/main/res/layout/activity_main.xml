<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal" >

    <TextView
        android:id="@+id/circle_theatres"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:text="@string/theatres"
        android:textColor="#ffff"
        android:textSize="17sp"
        android:layout_marginTop="112dp"
        android:layout_toRightOf="@+id/circle_distributers"
        android:layout_toEndOf="@+id/circle_distributers" />

    <TextView
        android:id="@+id/circle_movies"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:text="@string/movies"
        android:textColor="#ffff"
        android:textSize="17sp"

        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_below="@+id/circle_distributers"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/circle_distributers"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:text="@string/shows"
        android:textColor="#ffff"
        android:textSize="14sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/circle_movies"
        android:layout_toEndOf="@+id/circle_movies"
        android:layout_marginTop="32dp" />
    <TextView
        android:id="@+id/circle_buys"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:text="buys"
        android:textColor="#ffff"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp"
        android:layout_marginLeft="90dp"/>
    <TextView
        android:id="@+id/circle_customer"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:text="customer"
        android:textColor="#ffff"
        android:textSize="17sp"
        android:layout_marginRight="17dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"/>

</RelativeLayout>